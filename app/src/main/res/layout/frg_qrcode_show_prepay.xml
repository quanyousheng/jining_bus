        android:text="@string/frg_qrcode_topay"
        android:textColor="@color/white"
        android:layout_below="@id/ll_qrcodeshow"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"/>-->
</RelativeLayout>