<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/aty_realtimebusshowbusinfo_itembus"
        android:drawablePadding="5dp"
        android:textColor="@color/comon_text_black_less"
        android:textSize="13sp"
        tools:text="11路" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_way"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/comon_text_black_normal"
            android:textSize="12sp"
            tools:text="五云桥－双峰寺枢纽站" />

        <TextView
            android:id="@+id/tv_nearSta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="12sp"
            tools:text="最近站点：五云桥" />
    </LinearLayout>

</LinearLayout>
